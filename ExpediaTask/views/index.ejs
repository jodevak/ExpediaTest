                            <h2>Search Special Offers</h2>
                            <form id="searchD1" action="<%=mainURL%>/search" method="GET">
                                <div class="form-group">
                                    
                                    <div class="form-elements">
                                        <label>To (Destination Full Name)</label>
                                        <div class="form-item">
                                            <i class="awe-icon awe-icon-marker-1"></i>
                                            <input type="text" name="destinationName" placeholder="United States Of America">
                                        </div>
                                    </div>
                                    <div class="form-elements">
                                        <label>To (Destination Region Id)</label>
                                        <div class="form-item">
                                            <i class="awe-icon awe-icon-marker-1"></i>
                                            <input type="text" name="regionIds" placeholder="6126616,6057480">
                                        </div>
                                    </div>
                                      <div class="form-elements">
                                        <label>To (Destination City)</label>
                                        <div class="form-item">
                                            <i class="awe-icon awe-icon-marker-1"></i>
                                            <input type="text" name="destinationCity" placeholder="New York">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="form-elements">
                                        <label>Depart on</label>
                                        <div class="form-item">
                                            <i class="awe-icon awe-icon-calendar"></i>
                                            <input type="date" name="minTripStartDate" class="awe-calendar hasDatepicker" placeholder="Check in" id="dp1487615440246">
                                        </div>
                                    </div>
                                    <div class="form-elements">
                                        <label>Return on</label>
                                        <div class="form-item">
                                            <i class="awe-icon awe-icon-calendar"></i>
                                            <input type="date" name="maxTripStartDate" class="awe-calendar hasDatepicker" placeholder="Check out" id="dp1487615440247">
                                        </div>
                                    </div>
                                  <div class="form-elements">
                                        <label>Length of stay</label>
                                        <div class="form-item">
                                            <input type="number" name="lengthOfStay" placeholder="5" min="1" >
                                        </div>
                                    </div>
                                    
                                </div>
                                <div class="form-group">
                               
                                 
                                </div>
                                <div class="form-actions">
                                    <input type="submit" value="Find My Tour">
                                </div>
                        </div>                        
                        </div>

                    
                        
                    </div>
                </div>
        </section>
        <!-- END / HEADING PAGE -->

        
        <section class="filter-page">
            <div class="container">
                <div class="row">
                    <div class="col-md-9 col-md-push-3">
                        <div class="filter-page__content">
                            <div class="filter-item-wrapper">
                                <!-- ITEM -->
                                <% for(var i=0; i < hotels.length; i++) { %>
                                <div class="hotel-item">
                                    <div class="item-media">
                                        <div class="image-cover">
                                            <img src= <%=hotels[i].hotelInfo.hotelImageUrl%> alt="" style="height: 100%; width: auto;">
                                        </div>
                                    </div>
                                    <div class="item-body">
                                        <div class="item-title">
                                            <h2>
                                                <a href=<%= mainURL%><%=hotels[i].hotelUrgencyInfo.link%>><%=hotels[i].hotelInfo.hotelName%></a>
                                            </h2>
                                        </div>
                                        <div class="item-hotel-star">
                                        <% var floor=parseInt(hotels[i].hotelInfo.hotelStarRating);
                                        var left=parseFloat(hotels[i].hotelInfo.hotelStarRating)-floor;
                                        for(var j=0; j < floor; j++) {
                                         %>
                                            <i class="fa fa-star"></i>
                                       
                                        <%} %>

                                         <% 
                                        if(left!=0) { 
                                         %>
                                         <i class="fa fa-star-half"></i>

                                          <%} %>                                            
                                        </div>
                                        <div class="item-address">
                                            <i class="awe-icon awe-icon-marker-2"></i>
                                           <%=hotels[i].destination.regionID%> <%=hotels[i].destination.longName%>
                                        </div>
                                        <div class="item-footer">
                                            <div class="item-rate">
                                                <span>Guest Rating : <%=hotels[i].hotelInfo.hotelGuestReviewRating%></span>
                                            </div>
                                            <% if(hotels[i].hotelInfo.allInclusive=='true'){ %>
                                            <div class="item-icon">
                                                <i class="awe-icon awe-icon-gym"></i>
                                                <i class="awe-icon awe-icon-car"></i>
                                                <i class="awe-icon awe-icon-food"></i>
                                                <i class="awe-icon awe-icon-level"></i>
                                                <i class="awe-icon awe-icon-wifi"></i>
                                            
                                            <% } %>
                                            <%  if(hotels[i].hotelInfo.carPackage==true && hotels[i].hotelInfo.allInclusive==false){ %>
                                               <i class="awe-icon awe-icon-car"></i>
                                            <% } %>

                                        </div>
                                    </div>
                                    <div class="item-price-more">
                                        <div class="price">
                                            one night from
                                            <span class="amount"><%=hotels[i].hotelPricingInfo.totalPriceValue%> <%=hotels[i].hotelPricingInfo.currency%></span>
                                        </div>
                                         <div class="price">
                                         <%var saved=
                                         Number(hotels[i].hotelPricingInfo.originalPricePerNight)+
                                         Number(hotels[i].hotelPricingInfo.hotelTotalBaseRate)+
                                         Number(hotels[i].hotelPricingInfo.hotelTotalTaxesAndFees) +
                                         Number(hotels[i].hotelPricingInfo.hotelTotalMandatoryTaxesAndFees)
                                         +
                                         Number(hotels[i].hotelPricingInfo.totalPriceValue);
                                         saved=parseInt(saved);
                                         %>
                                                                                        
                                            <span class="amount" style="text-decoration:line-through;"><%=saved%> <%=hotels[i].hotelPricingInfo.currency%> </span>
                                        </div>
                                        <a href="#" class="awe-btn">Book now</a>
                                    </div>
                                </div>
                                <% } %>
                                <!-- END / ITEM -->
                               
                            </div>

                        </div>
                    </div>
                    <div class="col-md-3 col-md-pull-9">
                            
                            <input id="totRate1" type="hidden"  name="minTotalRate"/>
                            <input id="totRate2" type="hidden" name="maxTotalRate"/>


                        <div class="page-sidebar">
